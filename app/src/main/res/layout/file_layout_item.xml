<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="4dp"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp" >

<RelativeLayout
     android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/pdf_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/pdf"
        android:padding="4dp"
        android:layout_margin="4dp">

    </ImageView>
    <TextView
        android:id="@+id/pdf_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_toRightOf="@+id/pdf_icon"
        android:text="This is a Pdf of Data structures and Algorithms through java by AK ROY  "
        android:layout_margin="2dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textStyle="bold"
        >

    </TextView>
    <ImageButton
        android:id="@+id/file_download_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@id/pdf_title_textview"
        android:background="@drawable/download"
        android:layout_margin="8dp"
        android:layout_alignParentEnd="true">

    </ImageButton>

</RelativeLayout>
</androidx.cardview.widget.CardView>