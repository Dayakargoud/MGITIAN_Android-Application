<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_margin="4dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="4dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/route_no_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:text="Route no:"
            android:textColor="@color/colorAccent"
            android:layout_margin="2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/route_no_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/route_no_info"
            android:text="46"
            android:textColor="@color/color_grey"
            android:textStyle="bold"
            android:layout_margin="2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/route_name_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Route name:"
            android:textColor="@color/colorAccent"
            android:layout_margin="2dp"
            android:layout_below="@+id/route_no_info"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/route_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RamanthaPur"
            android:textColor="@color/color_grey"
            android:textStyle="bold"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@+id/route_name_info"
            android:layout_below="@+id/route_no_value"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


        <TextView
        android:id="@+id/route_stops_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Designated Bus Stops:"
        android:textColor="@color/colorAccent"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
         android:layout_below="@+id/route_name_info"
            android:layout_marginTop="8dp"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="4dp"

            />

        <TextView
            android:id="@+id/route_stops_values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bus stops"
            android:textColor="@color/color_grey"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_below="@+id/route_stops_info"
            android:layout_margin="2dp"

            />

    </RelativeLayout>




</androidx.cardview.widget.CardView>